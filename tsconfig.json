{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": [
      "es6"
    ],
    "baseUrl": ".",
    "paths": {
      "@pancakeswap-internal/*": ["libs/pancakeswap/*"],
      "@uninswap-internal/*": ["libs/uninswap/*"],
      "@abis/*": ["abis/*"],
    }
  },
  "include": [
    "libs/pancakeswap/abi-test.json",
    "abis/"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
